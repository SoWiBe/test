<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid Background="LightGreen">
            <TextBlock Text="Тесты )()))" HorizontalAlignment="Center"
                   VerticalAlignment="Center" FontFamily="Times New Roman"
                   FontSize="30" Foreground="White"/>
        </Grid>
        <Grid Grid.Row="1">
            <DataGrid AutoGenerateColumns="False" Name="DGAnimals">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="Имя животного" Binding="{Binding Path=Name}"/>
                    <DataGridTextColumn Width="*" Header="Тип животного" Binding="{Binding Path=Type}"/>
                    <DataGridTextColumn Width="*" Header="Имя врача" Binding="{Binding Path=Doctors.Name}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
       
        
    </Grid>
</Window>
